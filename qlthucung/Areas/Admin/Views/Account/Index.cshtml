@model List<qlthucung.Models.AspNetUser>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 padding-10">
    <h1>Account List</h1>
    <div class="body fix-width scroll-inner">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tên đăng nhập</th>
                    <th>Email</th>
                    <th>Họ và tên</th>
                    <th>Ngày sinh</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.FullName</td>
                        <td>@user.BirthDate.ToShortDateString()</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@user.Id" class="text-primary f2"><i class="fa-solid fa-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="text-primary f2"><i class="fas fa-edit"></i></a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="text-primary f2"><i class="fa-solid fa-trash-can"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>