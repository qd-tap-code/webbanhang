@model List<DanhMuc>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 padding-8">
    <h1>Danh Mục</h1>

    <p>
        <a asp-action="Create">Tạo mới danh mục</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Tên Danh Mục</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var danhMuc in Model)
            {
                <tr>
                    <td>@danhMuc.Tendanhmuc</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@danhMuc.IdDanhmuc" class="text-primary f2"><i class="fa-solid fa-eye"></i></a>
                        <a asp-action="Edit" asp-route-id="@danhMuc.IdDanhmuc" class="text-primary f2"><i class="fas fa-edit"></i></a>
                        <a asp-action="Delete" asp-route-id="@danhMuc.IdDanhmuc" class="text-primary f2"><i class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>